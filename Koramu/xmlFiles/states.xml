<?xml version="1.0" encoding="UTF-8"?>

<states>
  <!-- Texturen werden seperat geladen (unabhÃ¤ngig vom Spielzustand)-->
  <textures>
    <!-- Buttons-->
    <texture id="buttonStart" path="../assets/Button_Start.png"/>
    <texture id="buttonHowtoplay" path="../assets/Button_Howtoplay.png"/>
    <texture id="buttonExit" path="../assets/Button_Exit.png"/>
    <texture id="buttonResume" path="../assets/Button_Resume.png"/>
    <texture id="buttonMainMenu" path="../assets/Button_MainMenu.png"/>
    <texture id="buttonBack" path="../assets/Button_Back.png"/>

    <!-- keine Buttons-->
    <texture id="koramu" path="../assets/Koramu.png"/>
    <texture id="player" path="../assets/Player.png"/>
  </textures>

  <menu>
    <gameObjects>
      <gameObject type="button" textureId="buttonStart"
                  xPos="460" yPos="293" width="360" height="120"
                  numRows="1" numCols="3"
                  mapId="mainMenuMap" callbackId="menuToPlay"/>
      <gameObject type="button" textureId="buttonHowtoplay"
                  xPos="460" yPos="438" width="360" height="120"
                  numRows="1" numCols="3"
                  mapId="mainMenuMap" callbackId="menuToHowToPlay"/>
      <gameObject type="button" textureId="buttonExit"
                  xPos="460" yPos="583" width="360" height="120"
                  numRows="1" numCols="3"
                  mapId="mainMenuMap" callbackId="exit"/>
      <gameObject type="animation" textureId="koramu"
                  xPos="202" yPos="31" width="877" height="181"
                  numRows="1" numCols="1"
                  mapId="mainMenuMap"/>
      <!--<gameObject type="animation" textureId="player"
                  xPos="460" yPos="374" width="24" height="62"
                  numRows="4" numCols="4"
                  mapId="mainMenuMap"/>-->
    </gameObjects>
	</menu>

  <howToPlay>
    <gameObjects>
      <gameObject type="button" textureId="buttonBack"
                  xPos="50" yPos="50" width="80" height="80"
                  numRows="1" numCols="3"
                  mapId="mainMenuMap" callbackId="backToMenu"/>
    </gameObjects>
  </howToPlay>
  
	<play>
    <gameObjects>
      <gameObject type="player" textureId="player"
                  xPos="460" yPos="293" width="70" height="180"
                  numRows="4" numCols="4"
                  mapId="mainMenuMap" animSpeed="200"/>
    </gameObjects>
	</play>
	
  <pause>
    <gameObjects>
      <gameObject type="button" textureId="buttonResume"
                  xPos="460" yPos="293" width="200" height="80"
                  numRows="1" numCols="3"
                  mapId="mainMenuMap" callbackId="resumePlay"/>
      <gameObject type="button" textureId="buttonMainMenu"
                  xPos="460" yPos="438" width="200" height="80"
                  numRows="1" numCols="3"
                  mapId="mainMenuMap" callbackId="playToMenu"/>
    </gameObjects>
	</pause>
</states>
